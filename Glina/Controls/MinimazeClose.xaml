<UserControl x:Class="Glina.Controls.MinimazeClose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             
             Height="50" 
             Width="65">
    
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/MainView/MainWindowStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    
    <Grid>
        
        <Button Style="{StaticResource ImgMin}"
                Command="{Binding MinimizeCommand}">
            <Image Source="../Assets/MainView/Minimaze.png"/>
        </Button>
                
        <Button Style="{StaticResource ImgClose}"
                Command="{Binding CloseCommand}">
            <Image Source="../Assets/MainView/Close.png"/>
        </Button>
        
    </Grid>
    
    
</UserControl>
